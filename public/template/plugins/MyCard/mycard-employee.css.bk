.mycard.employee.staff .employee-detail { top: 95px; right: 0px; bottom: auto; left: 248px; }
.mycard.employee.staff .employee-detail p { color: #fff; }
.mycard.employee.staff .unlimit {
	top: 294px; right: auto; bottom: auto; left: 140px;
