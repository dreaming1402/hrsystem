.mycard.back {}
.mycard.back .background { width: 240px; top: 0px; right: auto; bottom: auto; left: 0px; }
.mycard.back .company-logo { position: relative; top: 0px; right: 0px; bottom: 0px left: 0px; margin: 15px 15px 0px 30px; }
.mycard.back .context { position: relative; margin-top: 10px; }
.mycard.back .company-contact { position: relative; margin-top: 5px; }
.mycard.back .text { display: block; text-transform: none; text-align: left; margin: 15px 30px; font-family: 'Roboto Light', 'robotolight'; }
.mycard.back .text small { display: block; }

.mycard.back.employee.staff, {
	width: 6.76in; /* 3.38in; */
	height: 4.28in; /* 2.14in; */
}
