/* Employee card */
.mycard.employee .employee-detail { top: 370px; }
.mycard.employee .employee-department {
	font-family: 'Roboto Black', 'robotoblack';
	font-size: 24px;
}
.mycard.employee .employee-id {
	margin: 6px 30px;
	font-family: 'Roboto', 'robotoregular';
	font-size: 22px;
}
.mycard.employee .employee-name {
	margin: 10px 30px;
	font-family: 'Roboto Black', 'robotoblack';
	font-size: 32px;
}
.mycard.employee .employee-position {
	margin-bottom: 6px;
	font-family: 'Roboto Condensed', 'roboto_condensedregular';
	font-size: 22px;
}
.mycard.employee .employee-image {
	width: 202px;
    height: 276px;
    top: 90px;
    margin: 0px auto 5px auto;

    border-radius: 20px;
	border: 1px solid #7f7f7f;
}
.mycard.employee .employee-image img { width: 100%; height: 100%; }
.mycard.employee .unlimit {
	top: 310px;
    width: 140px;
    left: 190px;
    bottom: auto;
}
.mycard.employee .datelimit {
	font-size: 22px;
	font-family: 'Roboto Black', 'robotoblack';
	color: #ff0000;
	text-transform: none;
	text-align: left;
}
.mycard.employee .datelimit p {
    padding: 10px;
    background-color: rgba(255,255,255,0.6);
    border-radius: 10px;
}
.mycard.employee .datelimit p span {
	width: 105px;
	display: inline-block;
}

/* Employee staff */
